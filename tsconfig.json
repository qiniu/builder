{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "lib",
    "rootDir": "src",
    "lib": [
      "es6"
    ],
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "sourceMap": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "samples"
  ]
}
